---
import "../styles/global.css";

const {
  title,
  description,
  canonical,
  ogType = "website",
  pubDate,
  updatedDate
} = Astro.props;

const siteTitle = "Marginalia";
const siteDescription =
  "A quiet library of short essays on reading, software, and attention.";

const fullTitle = title ? `${title} — ${siteTitle}` : siteTitle;
const canonicalUrl = canonical ?? new URL(Astro.url.pathname, Astro.site);
const metaDescription = description ?? siteDescription;
const year = new Date().getFullYear();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{fullTitle}</title>
    <meta name="description" content={metaDescription} />
    <link rel="canonical" href={canonicalUrl} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={metaDescription} />
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={canonicalUrl} />
    <meta name="twitter:card" content="summary" />
    {pubDate ? (
      <meta property="article:published_time" content={pubDate.toISOString()} />
    ) : null}
    {updatedDate ? (
      <meta property="article:modified_time" content={updatedDate.toISOString()} />
    ) : null}
    <link rel="icon" href="/favicon.svg" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="Marginalia RSS"
      href="/rss.xml"
    />
  </head>
  <body>
    <header class="site">
      <div>
        <a class="site-title" href="/">{siteTitle}</a>
        <div class="site-tagline">
          Notes on reading, software, and quiet work.
        </div>
      </div>
      <nav>
        <a href="/essays/">Essays</a>
        <a href="/about/">About</a>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer>© {year} {siteTitle}. Built for slow reading.</footer>
  </body>
</html>
